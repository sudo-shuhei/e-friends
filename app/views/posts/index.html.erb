<h1>投稿一覧ページ</h1>

<% @posts.each do |post| %>
  <div class = "post" >
    <%= link_to "/posts/#{post.id}" do %>
      <%= post.title %>
      <%= post.game %>
      <%= post.platform %>
      <%#= link_to "編集", "/posts/#{post.id}/edit"%>
      <%#= link_to "削除", "/posts/#{post.id}/destroy", {method:post}%>
    <% end %>
  </div>
<% end %>
