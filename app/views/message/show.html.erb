<h1>メッセージ画面</h1>

<div>
  <% @messages.each do |message| %>
    <%= message.from_user_id %>
    <%= message.content %>
    <br>
  <% end %>
</div>

<div>
  <%= form_with url: "/message/#{@room_id}/create" do |form| %>
    <%= hidden_field_tag :from_user_id, current_user.id %>
    <%= form.text_field :content%>
    <%= form.submit :送信 %>
  <% end %>
</div>
